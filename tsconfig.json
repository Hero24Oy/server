{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "require": ["tsconfig-paths/register"],
    "files": ["env.d.ts"]
  },
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "$modules/*": ["src/modules/*"],
      "$configs/*": ["src/config/*"],
      "$config": ["src/config/index"],
      "$decorator": ["src/common/decorators/index"],
      "$types": ["src/common/types/index"],
      "$utils": ["src/common/utils/index"],
      "$/*": ["src/*"]
    },
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src", "env.d.ts", "scripts"]
}
