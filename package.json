{
  "private": true,
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "engines": {
    "node": "^18.17",
    "npm": "^9.6"
  },
  "engineStrict": true,
  "scripts": {
    "prestart": "yarn checkNode",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --rule {'@typescript-eslint/no-unsafe-assignment':'off'}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "checkNode": "ts-node ./scripts/checkNodeVersion.ts",
    "postinstall": "node ./scripts/checkIsProd.js || husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@hubspot/api-client": "^9.0.0",
    "@nestjs/apollo": "^10.2.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^10.2.0",
    "@nestjs/platform-express": "^9.0.0",
    "apollo-server-express": "^3.11.1",
    "body-parser": "^1.20.2",
    "dataloader": "^2.2.2",
    "express": "^4.18.2",
    "firebase": "^9.17.2",
    "firebase-admin": "^11.10.1",
    "graphql": "^16.6.0",
    "graphql-subscriptions": "^2.0.0",
    "hero24-types": "^0.2.2",
    "joi": "^17.8.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "precision": "^1.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^7.3.6",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/lodash": "^4.14.194",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-typescript-sort-keys": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "29.3.1",
    "lint": "^0.8.19",
    "lint-staged": "^14.0.1",
    "prettier": "^2.8.8",
    "semver": "^7.5.4",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
